{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "prmse-app",
  "version": "0.3.0",
  "identifier": "com.prmse.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "PRMSE",
        "width": 1200,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
